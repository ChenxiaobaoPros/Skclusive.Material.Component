@namespace Skclusive.Material.Transition
@inherits MaterialComponentBase

<Transition
    Appear="true"
    In="@In"
    Name="Collapse"
    Timeout="@Timeout"
    AppearTimeout="@AppearTimeout"
    EnterTimeout="@EnterTimeout"
    ExitTimeout="@ExitTimeout"
    MountOnEnter="@MountOnEnter"
    UnmountOnExit="@UnmountOnExit"
    OnEnter="@HandleEnterAsync"
    OnEntering="@HandleEnteringAsync"
    OnEntered="@HandleEnteredAsync"
    OnExit="@HandleExitAsync"
    OnExiting="@HandleExitingAsync"
    OnExited="@HandleExitedAsync">
    <CollapseContainer
        In="@In"
        Class="@(CssUtil.ToClass(string.Empty, context.Classes))"
        Style="@(CssUtil.ToStyle(context.Styles, string.Empty))"
        RootRef="@context.RefBack"
        State="@context.State"
        WrapperRef="@WrapperRef"
        CollapsedHeight="@CollapsedHeight">
        @ChildContent.Invoke(context)
    </CollapseContainer>
</Transition>