@namespace Skclusive.Material.Transition
@inherits MaterialComponentBase

<Transition
    EventOnly
    In="@In"
    Name="Slide"
    Appear="@Appear"
    Timeout="@Timeout"
    AppearTimeout="@AppearTimeout"
    EnterTimeout="@EnterTimeout"
    ExitTimeout="@ExitTimeout"
    MountOnEnter="@MountOnEnter"
    UnmountOnExit="@UnmountOnExit"
    OnEnter="@HandleEnterAsync"
    OnEntering="@HandleEnteringAsync"
    OnExit="@HandleExitAsync"
    OnExited="@HandleExitedAsync">
    @ChildContent.Invoke(GetChildContext(context))
</Transition>